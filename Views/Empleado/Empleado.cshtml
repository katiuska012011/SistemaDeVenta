@model SistemaDeVenta.Models.Empleado;
@{
    ViewData["Title"] = "Empleado";
}
<link href="~/css/Librerias.css" rel="stylesheet" />
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">


    <title>Simple Sidebar - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/simple-sidebar.css" rel="stylesheet">
    <link href="~/css/Empleados.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>

    <div id="wrapper">
        <div id="sidebar-wrapper" class="bg-dark" style="font-size:18px;">
            <ul class="sidebar-nav">
                <li class="sidebar-brand" style="margin-top:50px;">
                </li>
                <li>

                    <a asp-controller="Producto" asp-action="Producto">  <i class=" fa fa-folder fa-1x"></i>  Productos</a>
                </li>
                <li>
                    <br />

                    <a asp-controller="Empleado" asp-action="Empleado">  <i class=" fa fa-user fa-1x"></i>  Empleados</a>

                </li>
                <li>
                    <br />
                    <a class="dropdown" href="#">
                        <a class="dropdown-toggle text-white-50" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class=" fa fa-money fa-1x"></i>
                            Ventas
                        </a>
                        <div class="dropdown-menu bg-dark text-white-50" aria-labelledby="dropdownMenu2">
                            <a asp-action="RegistrarVenta" asp-controller="Venta" class="dropdown-item">Registrar Nueva Venta</a>
                            
                        </div>
                    </a>
                </li>

            </ul>

        </div>
        <button type="button" href="#menu-toggle" class="btn btn-dark btn-lg" style="position:fixed; z-index:1000; top:70px; right:30px; " id="menu-toggle"><i class="fa fa-reorder"></i></button>

        <div id="page-content-wrapper">
            <div class="container">



                <!-- Formulario de Crear empleados-->
                <div class="mt-4 p-2"></div>
                <div class="col-md-12 text-center mt-4">
                    <h4> Agregar Empleados </h4>
                </div>


                <form asp-action="AgregarEmpleados" class=" border mt-4 addEmpleados">

                    <div class="form-row">
                        <div class="col-md-2"></div>
                        <div class="col-md-2">
                            <label>Nombre completo</label>
                            <input asp-for="Nombre" type="text" class="form-control " id="validationTooltip01" name="Nombre" placeholder="Nombre completo" required>
                            <div class="valid-tooltip">
                                Looks good!
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label>Telefono</label>
                            <input type="text" asp-for="Telefono" class="form-control" placeholder="Telefono" name="Telefono" required>
                            <div class="valid-tooltip">
                                Looks good!
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div></div>
                            <label>Email</label>
                            <div class="form-row">
                                <div>
                                    <span></span>
                                </div>
                                <input type="email" asp-for="Correo" class="form-control col-md-8" name="Correo" placeholder="Correo Electronico" required>
                                <div class="invalid-tooltip">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-2"></div>
                        <div class="col-md-3 mb-3">
                            <label for="validationTooltip05">Clave</label>
                            <input type="password" asp-for="Clave" class="form-control col-md-10" name="Clave" placeholder="Clave" required>
                            <div class="invalid-tooltip">
                                Please provide a valid zip.
                            </div>
                        </div>
                        <div class="col-md-4" style="margin-top:30px; ">
                            <button class="btn btn-outline-primary   animated wobble col-md-8" type="submit"> <i class="fa-fa-user-o"></i>  Agregar</button>
                        </div>
                    </div>
                </form>

                <div style="margin-top:100px;">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-center">ID</th>
                                <th class="text-center">Nombre</th>
                                <th class="text-center">Correo</th>
                                <th class="text-center">Telefono</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.EmployeesList != null)
                            {
                                foreach (var item in ViewBag.EmployeesList)
                                {

                                    if (item.Nombre != "" || item.Nombre != null)
                                    {
                                        <form asp-action="DeleteEmpleado">
                                            <tr>
                                                <td class="text-center">
                                                    @item.id
                                                </td>
                                                <td class="text-center">
                                                    @item.Nombre
                                                </td>
                                                <td class="text-center">
                                                    @item.Correo
                                                </td>
                                                <td class="text-center">
                                                    @item.Telefono
                                                    <input type="hidden" name="id" value="@item.id" />
                                                </td>
                                                <td> </td>
                                                <td>
                                                    <button asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary animated fadeInRight"> <i class="fa fa-refresh"></i>  </button>
                                                    <button asp-action="Detalle" asp-route-id="@item.id" class="btn btn-success animated fadeInRight"> <i class="fa fa-file-text-o"> </i>  </button>
                                                    <button type="submit" class="btn btn-danger animated fadeInRight"> <i class="fa fa-trash"> </i>  </button>

                                                </td>
                                            </tr>
                                        </form>

                                    }

                                }
                            }
                        </tbody>
                    </table>

                </div>

            </div>


        </div>

    </div>


    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

</body>

</html>



