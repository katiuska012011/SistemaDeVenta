@model SistemaDeVenta.Models.Empleado
@{
    ViewData["Title"] = "Detalle";
}


<style>
    .Edit{
        margin:50px;
        padding:20px;
        border-radius:20px;
    }
 .Regresar{
     margin:30px;
     right:20px;
 }
</style>



<div class="col-md-12 text-center mt-4" style="margin-top:60px; padding:40px;" >
    <h2> Detalles del empleado </h2>
</div>

 <form asp-action="Detalle"  class=" border  Edit ">

    <div class="form-row">
        <div class="col-md-2"></div>
        <div class="col-md-2">
            <label>Nombre completo</label>
            <input asp-for="Nombre" type="text" disabled class="form-control " id="validationTooltip01" name="Nombre" placeholder="Nombre completo" required>
            <div class="valid-tooltip">
                Looks good!
            </div>
        </div>
        <div class="col-md-2">
            <label>Telefono</label>
            <input type="text" asp-for="Telefono" disabled class="form-control" placeholder="Telefono" name="Telefono" required>
            <div class="valid-tooltip">
                Looks good!
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div></div>
            <label>Email</label>
            <div class="form-row">
                <div>
                    <span></span>
                </div>
                <input type="email" asp-for="Correo" disabled class="form-control col-md-8" name="Correo" placeholder="Correo Electronico" required>
                <div class="invalid-tooltip">

                </div>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-2"></div>
        <div class="col-md-3 mb-3">
            <label for="validationTooltip05">Clave</label>
            <input type="password" asp-for="Clave" disabled class="form-control col-md-10" name="Clave" placeholder="Clave" required>
            <div class="invalid-tooltip">
                Please provide a valid zip.
            </div>
        </div>
     
            <div class="col-md-2 " style="margin-top:30px; ">
                <button class="btn btn-outline-primary   animated wobble col-md-8" type="submit"> Update</button>

            </div>
            <div class="col-md-2 ">
                <a asp-action="Empleado" class="btn btn-outline-success    animated wobble col-md-8 Regresar" style="right:100px;"> Regresar</a>
            </div>
        </div>
    
</form>
