@model SistemaDeVenta.Models.Producto
@{
    ViewData["Title"] = "Detalle";
}

<link href="~/css/Producto.css" rel="stylesheet" />
<!-- Formulario de Crear Productos-->

<div class="container">
    <div class="col-md-12 text-center " style="margin-top:60px; padding:40px;">
        <h2> Detalles del producto</h2>
    </div>

    <div class=" border  mt-4 addProductos">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label>Nombre</label>
                    <input asp-for="Nombre" type="text" disabled class="form-control col-md-12" id="validationTooltip01" placeholder=" Nombre" name="Nombre" required>
                    <div class="valid-tooltip">
                        Bien!
                    </div>
                </div>
                
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Descripcion</label>
                    <input asp-for="Descripcion" type="text" disabled class="form-control" placeholder="Descripcion" name="Descripcion" required>
                    <div class="valid-tooltip">
                        Bien!
                    </div>
                </div>
                
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label>Precio</label>

                    <input asp-for="Precio" type="text" disabled class="form-control col-md-12" name="Precio" placeholder="Precio" required>
                </div>
                
            </div>

            <div class="col-md-2 mt-2">      
                <div class="form-group">
                    <label class="text-success"><i class="fa fa-check"></i></label>
                    <a asp-action="Producto" class="btn btn-outline-success   animated wobble col-md-12">Regresar</a>
                </div>
                       
            </div>`
        </div>
    </div>
</div>
